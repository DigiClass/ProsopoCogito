# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# Static resources
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

GET     /assets/*file                      controllers.Assets.versioned(path="/public", file: Asset)

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# Authentication & user-related
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

GET     /login                             controllers.Login.showLoginForm
POST    /login                             controllers.Login.processLogin
GET     /signup                            controllers.Signup.showSignupForm
POST    /signup                            controllers.Signup.processSignup
GET     /restricted                        controllers.Application.restricted

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# Frontpage
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

GET     /                                  controllers.Application.landingPage





